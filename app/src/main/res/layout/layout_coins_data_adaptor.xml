<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical" android:layout_marginTop="4dp" android:layout_marginBottom="4dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPrimaryCFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:fadeScrollbars="true"
                android:fontFamily="sans-serif-condensed"
                android:text="1.00000000"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvPrimaryC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:fadeScrollbars="true"
                    android:text="BTC"
                    android:textColor="@android:color/background_light"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" android:fontFamily="sans-serif-condensed"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:fadeScrollbars="true"
                android:text="To"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvSecondaryC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:fadeScrollbars="true"
                android:fontFamily="sans-serif-condensed"
                android:text="ETH"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSecondaryCTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fadeScrollbars="true"
                android:fontFamily="sans-serif-condensed"
                android:text="11.93000000"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:fadeScrollbars="true"
                    android:text="From"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:id="@+id/tvExchange"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:fadeScrollbars="true"
                    android:text="Exchange"
                    android:textColor="@android:color/background_light"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"/>
            <TextView
                    android:id="@+id/tvUpdateDate"
                    android:layout_width="wrap_content"
                    android:fadeScrollbars="true"
                    android:text="56 minutes ago"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_weight="1"
                    android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>