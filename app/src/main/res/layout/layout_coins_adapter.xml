<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp" app:srcCompat="@drawable/ic_action_unselected"
            android:id="@+id/btnFavourite" android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless" android:layout_marginTop="10dp"
            android:layout_marginStart="4dp" android:layout_marginLeft="4dp"
            android:elevation="0dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvMainHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fadeScrollbars="true"
                android:text="42 Coin"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold" android:layout_weight="1"/>
        <TextView
                android:id="@+id/tvSubHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text="42"
                android:textColor="@android:color/darker_gray" android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>